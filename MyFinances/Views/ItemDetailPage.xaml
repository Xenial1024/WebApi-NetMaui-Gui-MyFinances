<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFinances.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Nazwa:" FontSize="Medium" />
        <Label Text="{Binding Operation.Name}" 
               FontSize="Small"/>
      
        <Label Text="Opis:" FontSize="Medium" />
        <Label Text="{Binding Operation.Description}" 
               FontSize="Small"/>

        <Label Text="Wartość:" FontSize="Medium" />
        <Label Text="{Binding Operation.Value}" 
               FontSize="Small"/>

        <Label Text="Data utworzenia:" FontSize="Medium" />
        <Label Text="{Binding Operation.Date, StringFormat='{0:dd-MM-yyyy}'}" 
               FontSize="Small"/>

        <Label Text="Kategoria:" FontSize="Medium" />
        <Label Text="{Binding CategoryName}" 
               FontSize="Small"/>
    </StackLayout>
    
</ContentPage>